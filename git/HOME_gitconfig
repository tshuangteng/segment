# ~/.gitconfig

[core]
        autocrlf = false
[credential]
        helper = store
        useHttpPath = true
        httpusepath = true
[http]
        proxy = socks5://127.0.0.1:1080
[https]
        proxy = socks5://127.0.0.1:1080

